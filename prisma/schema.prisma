generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String    @id
  email             String    @unique
  isSubscribed      Boolean   @default(false)
  subscriptionEnds  DateTime?
  todos             Todo[]      // linking hai foreign key jaisa
  
}


model Todo {
  id        String   @id @default(cuid())
  title     String
  completed Boolean  @default(false)
  user      User     @relation(fields: [userId], references: [id])  // kya field expt kr rha and kya ref hai 
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


